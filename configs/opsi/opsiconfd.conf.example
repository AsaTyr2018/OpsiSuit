# Default opsiconfd configuration generated by the OpsiSuit installer.
# Values wrapped in @...@ are replaced during installation.

run-as-user = opsiconfd

# Bind to all available network interfaces.
interface = 0.0.0.0

# Plain HTTP listener used by depot/file services (container-internal port).
port = @OPSI_DEPOT_INTERNAL_PORT@

# TLS endpoints (JSON-RPC, admin UI, WebDAV, etc.).
# The daemon starts the HTTPS listener automatically as soon as valid
# certificates exist under /etc/opsi/ssl/.
ssl-port = @OPSI_API_INTERNAL_PORT@
ssl-server-key = @OPSI_SSL_KEY_PATH@
ssl-server-cert = @OPSI_SSL_CERT_PATH@
ssl-ca-cert = @OPSI_SSL_CA_PATH@
ssl-trusted-certs = /etc/ssl/certs/ca-certificates.crt
