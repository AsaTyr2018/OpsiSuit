# Example environment configuration for the OpsiSuit stack
# Copy this file to docker/.env and adjust the values to your environment

COMPOSE_PROJECT_NAME=opsisuit

# Global service defaults
TIMEZONE=UTC
SERVICE_UID=1000
SERVICE_GID=1000

# Database configuration
DB_ROOT_PASSWORD=ChangeMeRoot!
DB_NAME=opsi
DB_USER=opsi
DB_PASSWORD=ChangeMeDb!
DB_PORT=3306

# Redis cache
REDIS_IMAGE=redis/redis-stack-server:latest
REDIS_PORT=6379
REDIS_SERVICE_PORT=6379

# OPSI server configuration
OPSI_SERVER_IMAGE=uibmz/opsi-server:4.2
OPSI_SERVER_FQDN=opsi.local
OPSI_ADMIN_USER=opsiadmin
OPSI_ADMIN_PASSWORD=ChangeMeAdmin!
OPSI_API_PORT=4447
OPSI_DEPOT_PORT=4441
OPSI_WEBUI_PORT=4443

# PXE / TFTP service configuration
PXE_IMAGE=netbootxyz/netbootxyz:latest
PXE_TFTP_PORT=69
PXE_HTTP_PORT=8080
PXE_WEBAPP_PORT=3000
PXE_DATA_SUBNET=0.0.0.0/0
PXE_DEFAULT_MENU=default

# Agent defaults
AGENT_SECRET=ChangeMeAgentSecret!
AGENT_POLL_INTERVAL=3600
